@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SaintAdviser</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link href="~/css/adminlte.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    <style>
        .menu-element {
            color: red;
            width: max-content;
        }

        .footer-text-element{
            height: 30px;
            margin: initial;
        }

        .btn {
            width: inherit;
            display: block;
            width: 100%;
        }

        .selectbtn.selected {
            /*background-color: #56d42d;*/
            background-color: red;
            color: #000
        }

        .selectbtn:hover {
            /*background-color: #56d42d;*/
            background-color: orangered;
            color: #000
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SaintAdviser</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <span style="width: 100%;">

                    </span>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark menu-element" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark menu-element" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark menu-element" asp-area="" asp-controller="EuropeService" asp-action="Index">Europe Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark menu-element" asp-area="" asp-controller="TurkeyService" asp-action="Index">Turkey Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark menu-element" asp-area="" asp-controller="AboutUs" asp-action="Index">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark menu-element" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
                <div class="row">
                    <p id="head" class="footer-text-element">
                        FALLING ACTION LIMITED LIABILITY COMPANY
                    </p>
                </div>
                <div class="row">
                    <p id="text" class="footer-text-element">
                        Suadiye, Bağdat Avenue, Mücahit Street, Ark399 Plaza B Block KADIKÖY / İSTANBUL
                    </p>
                </div>
                <div class="row">
                    <p id="foot" class="footer-text-element">
                        Copyright 2023 SAINTADVISER All Rights Reserved
                    </p>
                </div>

                
            
            &copy; 2023 - SaintAdviser.WEB - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
